<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CardView for the soil image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground">

            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@color/colorPrimary"/>
        </androidx.cardview.widget.CardView>

        <!-- Soil Name -->
        <TextView
            android:id="@+id/detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"/>

        <!-- Soil Description -->
        <TextView
            android:id="@+id/detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/textColorSecondary"/>

        <!-- Irrigation Information -->
        <TextView
            android:id="@+id/detail_irrigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:text="Irrigation:"/>

        <!-- Suitable Crops -->
        <TextView
            android:id="@+id/detail_crops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:text="Suitable Crops:"/>

        <!-- pH Level -->
        <TextView
            android:id="@+id/detail_ph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:text="pH Level:"/>

        <!-- Nutrient Content -->
        <TextView
            android:id="@+id/detail_nutrients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:text="Nutrient Content:"/>

    </LinearLayout>
</ScrollView>